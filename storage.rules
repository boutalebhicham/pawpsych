rules_version = '2';

service firebase.storage {
  match /b/studio-7863342144-fe56c.firebasestorage.app/o {

    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // User uploads — each user can read/write only in their own folder
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;  // 5MB max
    }

    // Reports PDFs — owner read only, server writes via admin SDK
    match /reports/{reportId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Only server-side (admin SDK) can write
    }
  }
}
